<Window x:Class="wpf_1135_EF_sample.AddPressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_1135_EF_sample"
        mc:Ignorable="d"
        Title="AddPressWindow" Height="450" Width="800">
    <StackPanel>
        <Label Content="Имя"/>
        <TextBox Text="{Binding Singer.Firstname}" IsReadOnly="True"/>
        <Label Content="Фамилия"/>
        <TextBox Text="{Binding Singer.Lastname}" IsReadOnly="True"/>
        <Label Content="Введите новый заголовок"/>
        <TextBox Text="{Binding YellowPress.TitleArticle}"/>
        <Label Content="Статья"/>
        <TextBox Text="{Binding YellowPress.Description}"/>

        <Button Content="Добавить статью" Click="Click_add"/>
    </StackPanel>
</Window>
